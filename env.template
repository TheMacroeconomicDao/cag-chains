# CAG-Chain Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database
DATABASE_URL="postgresql://cag_user:cag_password@localhost:5432/cag_chains"

# Redis
REDIS_URL="redis://localhost:6379"

# OpenAI
OPENAI_API_KEY="your_openai_api_key_here"

# API Configuration
API_PORT=3000
API_HOST="0.0.0.0"

# Logging
LOG_LEVEL="info"

# Security
JWT_SECRET="your_jwt_secret_here"
API_KEY_SECRET="your_api_key_secret_here"

# CAG System Configuration
MAX_CONCURRENT_CHAINS=100
DEFAULT_NODE_TIMEOUT=300000
CONTEXT_COMPRESSION_RATIO=0.3

# P2P Network
P2P_PORT=4000
BOOTSTRAP_NODES=""
NETWORK_ID="cag-mainnet"

# Monitoring
PROMETHEUS_PORT=9090
METRICS_ENABLED=true 